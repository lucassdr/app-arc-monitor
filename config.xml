<?xml version='1.0' encoding='utf-8'?>
<widget id="io.ionic.starter" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ArcMonitor</name>
    <description>Aplicativo para monitoramento dos maquinários da ArcDynamics</description>
    <author email="lucassdr@outlook.com.br" href="https://github.com/lucassdr">Lucas Sodré Teixeira</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="ScrollEnabled" value="false" />
    <preference name="android-minSdkVersion" value="19" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="FadeSplashScreenDuration" value="300" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <platform name="android">
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application" xmlns:android="http://schemas.android.com/apk/res/android">
            <application android:networkSecurityConfig="@xml/network_security_config" />
        </edit-config>
        <resource-file src="resources/android/xml/network_security_config.xml" target="app/src/main/res/xml/network_security_config.xml" />
        <allow-intent href="market:*" />
        <icon density="ldpi" src="./src/assets/icon/logo-app.png" />
        <icon density="mdpi" src="./src/assets/icon/logo-app.png" />
        <icon density="hdpi" src="./src/assets/icon/logo-app.png" />
        <icon density="xhdpi" src="./src/assets/icon/logo-app.png" />
        <icon density="xxhdpi" src="./src/assets/icon/logo-app.png" />
        <icon density="xxxhdpi" src="./src/assets/icon/logo-app.png" />
        <splash density="land-ldpi" src="./src/assets/icon/logo-app.png" />
        <splash density="land-mdpi" src="./src/assets/icon/logo-app.png" />
        <splash density="land-hdpi" src="./src/assets/icon/logo-app.png" />
        <splash density="land-xhdpi" src="./src/assets/icon/logo-app.png" />
        <splash density="land-xxhdpi" src="./src/assets/icon/logo-app.png" />
        <splash density="land-xxxhdpi" src="./src/assets/icon/logo-app.png" />
        <splash density="port-ldpi" src="./src/assets/icon/logo-app.png" />
        <splash density="port-mdpi" src="./src/assets/icon/logo-app.png" />
        <splash density="port-hdpi" src="./src/assets/icon/logo-app.png" />
        <splash density="port-xhdpi" src="./src/assets/icon/logo-app.png" />
        <splash density="port-xxhdpi" src="./src/assets/icon/logo-app.png" />
        <splash density="port-xxxhdpi" src="resources/android/splash/drawable-port-xxxhdpi-screen.png" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1.3.3" />
    <plugin name="cordova-plugin-statusbar" spec="2.4.2" />
    <plugin name="cordova-plugin-device" spec="2.0.2" />
    <plugin name="cordova-plugin-splashscreen" spec="5.0.2" />
    <plugin name="cordova-plugin-ionic-webview" spec="^4.0.0" />
    <plugin name="cordova-plugin-ionic-keyboard" spec="^2.0.5" />
</widget>
